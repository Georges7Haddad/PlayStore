<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Play Store</title>
    <%- include('headImports')%>
</head>

<body>
    <%- include('navbar')%>
        <div class="dropdown">
            <button class="dropbtn">Category</button>
            <div class="dropdown-content">
                <a id="filterApplications" href="#">
                    <img src="media/filter/genre.png" width="15" height="15"> Applications
                </a>
                <a id="filterGames" href="#">
                    <img src="media/filter/topselling.png" width="15" height="15"> Games
                </a>
                <a id="filterMovies" href="#">
                    <img src="media/filter/newreleases.png" width="15" height="15"> Movies
                </a>
                <a id="filterBooks" href="#">
                    <img src="media/filter/gooddeals.png" width="15" height="15"> Books
                </a>
            </div>
        </div>

        <div id="content">
            <div class="itemsRow">
                <% for (var i=0;i<last24VisitedItems.length;i++) {%>
                    <% if (["Book", "Movie" ].includes(last24VisitedItems[i].constructor.modelName)) { %>
                        <div class="itemBox largeItemBoxHome">
                            <% } else { %>
                                <div class="itemBox">
                                    <% } %>
                                        <img class="itemImage" src="<%=last24VisitedItems[i].image%>" alt="Image">
                                        <a
                                            href="/item?itemType=<%=last24VisitedItems[i].constructor.modelName%>&itemId=<%=last24VisitedItems[i]._id%>">
                                            <p class="itemTitle">
                                                <%=last24VisitedItems[i].title%>
                                            </p>
                                        </a>
                                        <p class="itemType">
                                            <%=last24VisitedItems[i].constructor.modelName%>
                                        </p>
                                        <p class="itemId">
                                            <%=last24VisitedItems[i]._id%>
                                        </p>
                                        <% if (wishlist.includes(last24VisitedItems[i].id)) { %>
                                            <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                            <% } else { %>
                                                <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                                <% } %>
                                                    <p class="itemPrice">
                                                        <% if (last24VisitedItems[i].price===0) { %>
                                                            Free
                                                            <% } else { %>
                                                                <%=last24VisitedItems[i].price%>$
                                                                    <% } %>
                                                    </p>
                                </div>
                                <%} %>
                        </div>

                        <%- include('footer')%>
            </div>
</body>

</html>