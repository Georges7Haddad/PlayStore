<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Play Store</title>
    <%- include('headImports')%>
</head>

<body>
    <%- include('navbar')%>
        <h1 class="page_title">GAMES</h1>
        <div id="content">
            <h3>Top Selling Games</h3>
            <a href="/games/topSelling"><button class="dropbtn seemore">See More...</button></a>
            <div class="itemsRowHome">
                <% for (var i=0;i<gamesTopSelling.length;i++) {%>
                    <div class="itemBox">
                        <img class="itemImage" src="<%=gamesTopSelling[i].image%>" alt="Image">
                        <a
                            href="/item?itemType=<%=gamesTopSelling[i].constructor.modelName%>&itemId=<%=gamesTopSelling[i]._id%>">
                            <p class="itemTitle">
                                <%=gamesTopSelling[i].title%>
                            </p>
                        </a>
                        <p class="itemType">
                            <%=gamesTopSelling[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=gamesTopSelling[i]._id%>
                        </p>
                        <% if (username) { %>
                            <% if (wishlist.includes(gamesTopSelling[i]._id)) { %>
                                <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                <% } else { %>
                                    <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                    <% } %>
                                        <% } %>
                                            <p class="itemPrice">
                                                <% if (gamesTopSelling[i].price===0) { %>
                                                    Free
                                                    <% } else { %>
                                                        <%=gamesTopSelling[i].price%>$
                                                            <% } %>
                                            </p>
                    </div>
                    <%}%>
            </div>
            <h3>New Release Games</h3>
            <a href="/games/newestReleases"><button class="dropbtn seemore">See More...</button></a>
            <div class="itemsRowHome">
                <% for (var i=0;i<gamesNewest.length;i++) {%>
                    <div class="itemBox">
                        <img class="itemImage" src="<%=gamesNewest[i].image%>" alt="Image">
                        <a
                            href="/item?itemType=<%=gamesNewest[i].constructor.modelName%>&itemId=<%=gamesNewest[i]._id%>">
                            <p class="itemTitle">
                                <%=gamesNewest[i].title%>
                            </p>
                        </a>
                        <p class="itemType">
                            <%=gamesNewest[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=gamesNewest[i]._id%>
                        </p>
                        <% if (username) { %>
                            <% if (wishlist.includes(gamesNewest[i]._id)) { %>
                                <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                <% } else { %>
                                    <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                    <% } %>
                                        <% } %>
                                            <p class="itemPrice">
                                                <% if (gamesNewest[i].price===0) { %>
                                                    Free
                                                    <% } else { %>
                                                        <%=gamesNewest[i].price%>$
                                                            <% } %>
                                            </p>
                    </div>
                    <%}%>
            </div>
            <%- include('footer')%>
        </div>
</body>

</html>