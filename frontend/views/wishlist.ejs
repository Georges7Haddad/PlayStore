<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Play Store</title>
    <%- include('headImports')%>
</head>

<body>
    <%- include('navbar')%>

        <div id="content">
            <div class="itemsRow">
                <% for (var i=0;i<wishlist.length;i++) {%>
                    <% if (["Book", "Movie"].includes(wishlist[i].constructor.modelName)) { %>
                        <div class="itemBox largeItemBox">
                        <% } else { %>
                            <div class="itemBox">
                                <% if (wishlist.includes(wishlist[i])) { %>
                                    <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                    <% } else { %>
                                        <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                        <% } %>
                            <% } %>
                        <img class="itemImage" src="<%=wishlist[i].image%>" alt="Image">
                        <p class="itemTitle">
                            <%=wishlist[i].title%>
                        </p>
                        <p class="itemType">
                            <%=wishlist[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=wishlist[i]._id%>
                        </p>
                        <% if (["Book", "Movie"].includes(wishlist[i].constructor.modelName)) { %>
                            <% if (wishlist.includes(wishlist[i])) { %>
                            <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                            <% } else { %>
                                <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                <% } %>
                             <%} %>
                        
                        <p class="itemPrice">
                            <% if (wishlist[i].price===0) { %>
                                Free
                                <% } else { %>
                                    <%=wishlist[i].price%>$
                                        <% } %>
                        </p>
                    </div>
                    <%} %>
            </div>

            <%- include('footer')%>
        </div>
</body>

</html>