<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Play Store</title>
    <%- include('headImports')%>
</head>

<body>
    <%- include('navbar')%>

        <div id="content">
            <div class="itemsRow">
                <% for (var i=0;i<movies.length;i++) {%>
                    <div class="itemBox largeItemBox">

                        <img class="itemImage" src="<%=movies[i].image%>" alt="Image">
                        <p class="itemTitle">
                            <%=movies[i].title%>
                        </p>
                        <p class="itemType">
                            <%=movies[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=movies[i]._id%>
                        </p>
                        <% if (wishlist.includes(movies[i]._id)) { %>
                            <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                            <% } else { %>
                                <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                <% } %>
                                    <p class="itemPrice">
                                        <% if (movies[i].price===0) { %>
                                            Free
                                            <% } else { %>
                                                <%=movies[i].price%>$
                                                    <% } %>
                                    </p>
                    </div>
                    <%}%>
            </div>

            <%- include('footer')%>
        </div>
</body>

</html>