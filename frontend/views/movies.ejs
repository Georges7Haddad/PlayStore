<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Play Store</title>
    <%- include('headImports')%>
</head>

<body>
    <%- include('navbar')%>
        <h1 class="page_title">MOVIES</h1>
        <div id="content">
            <h3>Top Selling movies</h3>
            <div class="itemsRowHome">
                <% for (var i=0;i<moviesTopSelling.length;i++) {%>
                    <div class="itemBox largeItemBoxHome">
                        <div class="movieImageDiv">
                            <div class="overlay">
                                <a href="<%=moviesTopSelling[i].trailerLink%>" target="_blank" class="playIcon" title="Play">
                                    <i class="fa fa-play-circle-o"></i>
                                </a>
                            </div>
                            <img class="itemImage" src="<%=moviesTopSelling[i].image%>" alt="Image">
                        </div>
                        <a
                            href="/item?itemType=<%=moviesTopSelling[i].constructor.modelName%>&itemId=<%=moviesTopSelling[i]._id%>">
                            <p class="itemTitle">
                                <%=moviesTopSelling[i].title%>
                            </p>
                        </a>
                        <p class="itemType">
                            <%=moviesTopSelling[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=moviesTopSelling[i]._id%>
                        </p>
                        <% if (username) { %>
                            <% if (wishlist.includes(moviesTopSelling[i]._id)) { %>
                                <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                <% } else { %>
                                    <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                    <% } %>
                                        <% } %>
                                            <p class="itemPrice">
                                                <% if (moviesTopSelling[i].price===0) { %>
                                                    Free
                                                    <% } else { %>
                                                        <%=moviesTopSelling[i].price%>$
                                                            <% } %>
                                            </p>
                    </div>
                    <%}%>
            </div>
            <a href="/movies/topSelling" class="seemorebutton"><button class="dropbtn seemore">See More...</button></a>

            <h3>New Release movies</h3>
            <div class="itemsRowHome">
                <% for (var i=0;i<moviesNewest.length;i++) {%>
                    <div class="itemBox largeItemBoxHome">
                        <div class="movieImageDiv">
                            <% if ("Movie".includes(moviesNewest[i].constructor.modelName)) { %>
                                <div class="overlay">
                                    <a href="<%=moviesNewest[i].trailerLink%>" target="_blank" class="playIcon" title="Play">
                                        <i class="fa fa-play-circle-o"></i>
                                    </a>
                                </div>
                                <% } %>
                                    <img class="itemImage" src="<%=moviesNewest[i].image%>" alt="Image">
                        </div>
                        <a
                            href="/item?itemType=<%=moviesNewest[i].constructor.modelName%>&itemId=<%=moviesNewest[i]._id%>">
                            <p class="itemTitle">
                                <%=moviesNewest[i].title%>
                            </p>
                        </a>
                        <p class="itemType">
                            <%=moviesNewest[i].constructor.modelName%>
                        </p>
                        <p class="itemId">
                            <%=moviesNewest[i]._id%>
                        </p>
                        <% if (username) { %>
                            <% if (wishlist.includes(moviesNewest[i]._id)) { %>
                                <a href="#"><i class="fa fa-bookmark bookmark"></i></a>
                                <% } else { %>
                                    <a href="#"><i class="fa fa-bookmark-o bookmark"></i></a>
                                    <% } %>
                                        <% } %>
                                            <p class="itemPrice">
                                                <% if (moviesNewest[i].price===0) { %>
                                                    Free
                                                    <% } else { %>
                                                        <%=moviesNewest[i].price%>$
                                                            <% } %>
                                            </p>
                    </div>
                    <%}%>
            </div>
            <a href="/movies/newestReleases" class="seemorebutton"><button class="dropbtn seemore">See More...</button></a>

            <%- include('footer')%>
        </div>
</body>

</html>